.contenCount{
  margin-bottom: 20rpx;
}
.section{
  background: #fff;
  margin-bottom: 10rpx;
}
.section>view{
  padding:45rpx 30rpx;
}
.section .left{
  width: 24%;
}
.section .left image{
  width: 170rpx;
  height: 170rpx;
}
.section .right{
  width: 76%;
  padding:20rpx 0 0 21rpx;
}
.section .right>view:first-of-type{
  color: #353535;
  font-size: 34rpx;
  font-weight: bold;
}
.section .right>view:first-of-type text{
  color: #FE4543;
  font-weight: bold;
}
.section .right>view:nth-of-type(2){
  color: #666666;
  font-size: 22rpx;
  margin-top: 45rpx;
}

.section1{
  background: #fff;
  padding:40rpx 30rpx 23rpx;
  margin-top: 20rpx;
}
.section1 textarea{
  width: 100%;
  height: 120rpx;
  color: #999999;
  font-size: 28rpx;
}


.submit{
  height: 88rpx;
  line-height: 88rpx;
  background: #FE4543;
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  color: #FFFFFF;
  font-size: 36rpx;
  z-index: 10;
}